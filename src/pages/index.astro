---
import Layout from '../layouts/Layout.astro';

import ImgBackground from "../assets/hero-img-bg.webp"
import Logo from "../assets/logo-icon.svg"
import ShortName from "../assets/short-name.svg"
import MenuIcon from "../assets/menu_icon.svg"
import LogoName from "../assets/logo-mask-test.svg"
import About from '../components/About.astro';
import NavBar from '../components/Nav.astro';
import Hero from '../components/Hero.astro';

---

<Layout>
  <div class="wrapper">
    <Hero />
    <About />
      <div class="image-container">
          <img id="img-anime" src={LogoName.src} />
      </div>
  </div>

</Layout>

<style is:global>
  @import "tailwindcss";
  @import "../styles/global.css";
</style>


<script>
  import { gsap } from "gsap"

  import { ScrollTrigger } from "gsap/ScrollTrigger"

  gsap.registerPlugin(ScrollTrigger)

  window.addEventListener("load", () => {
    gsap.timeline({
        scrollTrigger: {
            trigger: ".wrapper",
            start: "top top",
            end: "+=100%",
            pin: true,
            scrub: true,
            markers: false,
        },
  })
        .to("#img-anime", {
            scale: 2,
            z: 350,
            clipPath: "inset(10%)",
            transformOrigin: "center center",
            ease: "Power4.inOut",
        })
  })
</script>
